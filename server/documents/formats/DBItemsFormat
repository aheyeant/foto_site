users:
    id - int
    username - only lowercase characters, numbers and [_]; without spaces; max 64 chars
    email - valid email; max 255 chars;
    password - min HelpersConstants::$PASSWORD_MIN_LENGTH characters; max HelpersConstants::$PASSWORD_MAX_LENGTH chars
    phone - valid phone number(+[0-9]*) or null; max HelpersConstants::$PHONE_MAX_LENGTH chars
    role - defined roles
    verified - 1 - true | 0 - false
    blocked - 1 - true | 0 - false